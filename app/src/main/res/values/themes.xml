<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Contacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Contacts.NoActionBar">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="Theme.Contacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Contacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/text_button_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/text_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">?listPreferredItemHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>

</resources>